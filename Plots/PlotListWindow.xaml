<Window x:Class="Plots.PlotListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plots"
        mc:Ignorable="d"
        Title="Plot List View" SizeToContent="WidthAndHeight">
    <DockPanel x:Name="checkListContainer" x:FieldModifier="public" DockPanel.Dock="Right" MinWidth="150">
        <UniformGrid DockPanel.Dock="Top" Rows="1">
            <Button Command="{Binding ClearAllPlotsCommand}">CLear</Button>
            <Button Command="{Binding ShowAllPlotCommand}" Margin="2,2,2,2">Show All</Button>
            <Button Command="{Binding HideAllPlotCommand}" Margin="2,2,2,2">Hide All</Button>
        </UniformGrid>
        <StackPanel DockPanel.Dock="Top" Width="200">

        </StackPanel>
        <ScrollViewer Margin="2,2,2,2">
            <ItemsControl x:Name="plotCheckBoxItemControl" x:FieldModifier="public" 
                              ItemsSource="{Binding PlotList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="{Binding Name}" Margin="2,2,2,2"/>
                            <!--Image Source="{Binding BitMapImage}" Margin="2,2,2,2"/-->
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
